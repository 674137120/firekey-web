/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.login-container {
  height: 100vh;
  padding: 40rpx;
  background: linear-gradient(to bottom right, #4CAF50, #2E7D32);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  margin-top: 80rpx;
  text-align: center;
  color: #fff;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  margin-top: 20rpx;
  display: block;
}

.login-form {
  width: 100%;
  margin-top: 80rpx;
}

.input-group {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.input-group input {
  height: 80rpx;
  font-size: 32rpx;
}

.form-footer {
  text-align: right;
  margin-bottom: 40rpx;
}

.forget-pwd {
  color: #fff;
  font-size: 28rpx;
}

.login-btn {
  background: #fff;
  color: #4CAF50;
  font-weight: bold;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.other-login {
  margin-top: 80rpx;
  width: 100%;
}

.divider {
  position: relative;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.login-methods {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.icon-btn {
  background: none;
  padding: 0;
  width: 80rpx;
  height: 80rpx;
}

.icon-btn image {
  width: 100%;
  height: 100%;
}
